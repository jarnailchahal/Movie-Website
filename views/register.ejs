  top: 0;
  width: 100%;
  height: 100%;
  /* background-size: cover; */
  filter: blur(5px);
}

body {
  font-family: 'Lato', sans-serif;
  color: #4A4A4A;
  display: flex;
  justify-content: center;
  align-items: center;
  min-height: 100vh;
  overflow: hidden;
  margin: 0;
  padding: 0;
}

form {
  width: 350px;
  position: relative;
}

#image {
  content: url("/public/images/MyfigmaLogo.png");
  /* background-image: url("../images/MyfigmaLogo.png"); */
  /* content:url("/public/images/MyfigmaLogo.png"); */
  position:absolute;
  width: 20%;
  top: 16.5%;
  bottom: 20%;
  right: 39%;

}

.center {
  margin: auto;
  width: 50%;
  border: 3px solid green;
  padding: 10px;
}

form .form-field {
  display: -webkit-box;
  display: -ms-flexbox;
  display: flex;
