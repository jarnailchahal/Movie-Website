<!DOCTYPE html>
<html lang="en" >
<head>
  <title>Welcome Movie Lovers!</title>
  <%- include('head') -%>
</head>
<body>

<div id="bg"></div>
<div id="image"></div>


<form action="/register" method="POST">

  <div>
    <% if (messages.error) { %>
      <%= messages.error %>
    <%  } %>
  </div>


  <div>
    <label for="email" style="color:rgb(255, 255, 255);" >Email</label>
    <input type="email" id="email" name="email" required>
  </div>
  <div>
    <label for="password" style="color:rgb(255, 255, 255);" > Password  </label>
    <input type="password" id="password" name="password" required>
  </div>
      <br>
  <div>
    <label for="user-type" style="color:rgb(255, 255, 255);">User Type:</label>
    <select type= "text" name="type" id="user-type">
      <option value="regular">Regular</option>
      <option value="admin">Admin</option>
    </select>
    </div>

    <br>

  <div class="form-field" >
    <button class="btn"  type="submit">Create Account</button>
  </div>

  <div class="form-field">
    <a class="btn" href="/login">Back to Login</a>
  </div>
  
</form>

</body>


<style>  
